{
  "extends": [
    "@nuxtjs"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "branchTopic": "lock-file-maintenance-{{packageFile}}",
    "commitMessageExtra": "({{packageFile}})"
  },
  "labels": [
    "dependencies"
  ],
  "ignoreDeps": [
    "@nuxt/types",
    "typescript"
  ],
  "packageRules": [
    {
      "groupName": "Docs dependencies",
      "matchFiles": [
        "docs/package.json"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
